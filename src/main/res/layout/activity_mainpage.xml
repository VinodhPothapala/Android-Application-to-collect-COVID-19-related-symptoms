<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/symptomsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/purple_200"
        android:text="Symptoms"
        android:textSize="8pt"
        />
    <Button
        android:id="@+id/uploadsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/purple_200"
        android:text="Upload Signs"
        android:textSize="8pt"
        />
    <TextView
        android:id="@+id/respiratoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Res Rate"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="10pt" />

    <Button
        android:id="@+id/respiratoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Measure Respiratory Rate"
        android:backgroundTint="@color/purple_200"
        android:textSize="8pt" />
    <TextView
        android:id="@+id/heartRateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Heart Rate"
        android:layout_marginBottom="10dp"
        android:textSize="10pt" />

    <Button
        android:id="@+id/heartRateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Measure Heart Rate"
        android:backgroundTint="@color/purple_200"
        android:textSize="8pt"/>

</LinearLayout>